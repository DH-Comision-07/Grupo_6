<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head') %>

  <link rel="stylesheet" href="/css/productList.css" />
  <title>Listado de productos</title>
</head>

<body>
  <%- include("../partials/header") %>


    <main>
        <section class="product-list">

            <% products.forEach(product => { %>
                <article class="product">
                    <div class="image-container">
                        <!-- TODO: dinamismo imagenes -->
                        <img class="image" src="/images/vestido-largo_thumbnail.PNG" alt="">
                    </div>
                    
                    <div class="product-details">
                        <h2 class="product-details__nombre"><%= product.name %></h2>
                        <p class="product-details__precio">$ <%= product.price %></p>
                        <p class="product-details__info"><%= product.description %></p>
                        <p class="product-details__info">ID: <%= product.id %></p>
                        <p class="product-details__info"><%= product.colors %></p>
                        <p class="product-details__info"><%= product.sizes %></p>
                    </div>

                    <a href="/producto/editar/<%= product.id %>">EDITAR</a>
                </article>
            <% }); %>
            
            

        </section>
        
    </main>

  <%- include("../partials/footer") %>

</body>
</html>