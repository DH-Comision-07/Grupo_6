<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/head") %>

        <link rel="stylesheet" href="/css/productCreateEdit.css">
        <title>Nuevo Articulo</title>
</head>

<body>

    <%- include("../partials/header") %>

        <main>
            <section class="contenedor-formulario">
                <h1 class="titulo">EDITAR ARTICULO</h1>
                <form action="/producto/detalle/<%= product.id %>?_method=put" method="POST" class="formulario" enctype="multipart/form-data">
                    <div class="formulario__field">
                        <label for="name">Nombre del producto</label>
                        <input type="text" id="name" name="name" class="formulario__texto" required value="<%= product.name %>">
                    </div>
                    <div class="formulario__field">
                        <label for="description">Descripci√≥n</label>
                        <textarea id="description" name="description" class="formulario__textarea" required><%= product.description %></textarea>
                    </div>
                    <div class="formulario__field">
                        <label for="materials">Materiales</label>
                        <textarea name="materials" id="materials" class="formulario__textarea"
                            placeholder="Algodon, seda, spandex..." required><%= product.materials %></textarea>
                    </div>
                    <div class="formulario__field">
                        <label for="care">Cuidados</label>
                        <textarea name="care" id="care" class="formulario__textarea"
                            placeholder="Lavar a mano, lavar con agua fria..." required><%= product.care %></textarea>
                    </div>
                    <div class="formulario__field">
                        <label for="category">Categoria</label>
                        <select name="category" id="category">
                            <option value="new-releases">Nuevos lanzamientos</option>
                            <option value="on-sale">On sale</option>
                        </select>
                    </div>
                    <div class="formulario__field">
                        <label for="image">Imagenes</label>
                        <input type="file" id="image" name="image" class="formulario__imagenes">
                    </div>
                    
                    <label>Colores</label> 
                    <section class="checkbox-flex">
                    <% let colors = ['rojo', 'azul', 'marron', 'blanco', 'negro', 'beige', 'rosa', 'celeste', 'gris', 'amarillo', 'violeta', 'naranja', 'verde', 'lila', 'bordo'] %>
                    <% colors.forEach(color => { %>
                        <div class="formulario__field">

                        <input class="formulario__checkbox" type="checkbox" name="colors" id=<%= color %> value=<%= color %>
                        <% if (product.colors.includes(color)) { %>
                             checked
                        <% } %>
                        >

                        <label class="formulario__label" for=<%= color %>><%= color.toUpperCase() %></label>
                        </div>
                    <% }) %>
                    </section> 

                    <label>Talles</label> 
                    <section class="checkbox-flex">
                    <% let sizes = ['xxxs', 'xxs', 'xs', 's', 'm', 'l', 'xl', 'xxl', 'xxxl', 'unico'] %>
                    <% sizes.forEach(size => { %>
                        <div class="formulario__field">
                        <input class="formulario__checkbox" type="checkbox" name="sizes" id=<%= size %> value=<%= size %>
                        <% if (product.sizes.includes(size)) { %>
                            checked
                       <% } %>
                       >
                        <label class="formulario__label" for=<%= size %>><%= size.toUpperCase() %></label>
                        </div>
                    <% }) %>
                    </section> 

                    <div class="formulario__field">
                        <label for="price">Precio</label>
                        <input type="number" id="price" name="price" class="formulario__precio" step="50" min="0"
                            required value="<%= product.price %>">
                    </div>
                    <div class="formulario__field">
                        <label for="discount">Descuento</label>
                        <input type="number" id="discount" name="discount" class="formulario__precio" step="1" min="0"
                            required value="<%= product.discount %>">
                    </div>
                    <div class="formulario__field">
                        <label for="stock">Stock</label>
                        <input type="number" id="stock" name="stock" class="formulario__precio" step="1" min="0"
                            required value="<%= product.stock %>">
                    </div>
                    <button class="formulario__boton" type="submit">Guardar</button>
                </form>
            </section>
        </main>

        <%- include("../partials/footer") %>

</body>

</html>